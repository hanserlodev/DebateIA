<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:fillViewport="true">

<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <!-- Logo o icono -->
    <ImageView
        android:id="@+id/ivLogoWelcome"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/icon"
        android:scaleType="fitCenter"
        android:contentDescription="Logo DebateIA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tvTituloWelcome"
        app:layout_constraintVertical_chainStyle="packed"/>

    <!-- Título -->
    <TextView
        android:id="@+id/tvTituloWelcome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DebateIA"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="?attr/colorPrimary"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/ivLogoWelcome"
        app:layout_constraintBottom_toTopOf="@id/tvSubtitulo"/>

    <!-- Subtítulo -->
    <TextView
        android:id="@+id/tvSubtitulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tu entrenador de debates con IA"
        android:textSize="16sp"
        android:textColor="?attr/colorOnSurfaceVariant"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvTituloWelcome"
        app:layout_constraintBottom_toTopOf="@id/tvDescripcion"/>

    <!-- Descripción -->
    <TextView
        android:id="@+id/tvDescripcion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Mejora tus habilidades de argumentación debatiendo con una IA avanzada. Practica en diferentes niveles de dificultad y recibe retroalimentación detallada sobre tu desempeño."
        android:textSize="14sp"
        android:textColor="?attr/colorOnSurface"
        android:textAlignment="center"
        android:lineSpacingExtra="4dp"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvSubtitulo"
        app:layout_constraintBottom_toTopOf="@id/layoutCaracteristicas"/>

    <!-- Características -->
    <LinearLayout
        android:id="@+id/layoutCaracteristicas"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvDescripcion"
        app:layout_constraintBottom_toTopOf="@id/btnEmpezar">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="✅ 4 niveles de dificultad"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface"
            android:drawablePadding="8dp"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="✅ Detección de falacias lógicas"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface"
            android:drawablePadding="8dp"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="✅ Análisis completo con métricas"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface"
            android:drawablePadding="8dp"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="✅ Retroalimentación personalizada"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface"
            android:drawablePadding="8dp"
            android:layout_marginBottom="12dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="✅ Validación de fuentes académicas"
            android:textSize="14sp"
            android:textColor="?attr/colorOnSurface"
            android:drawablePadding="8dp"/>

    </LinearLayout>

    <!-- Botón Empezar -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnEmpezar"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="¡Empecemos!"
        android:textSize="16sp"
        android:paddingVertical="16dp"
        app:cornerRadius="12dp"
        app:icon="@android:drawable/ic_media_play"
        app:iconGravity="textStart"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
